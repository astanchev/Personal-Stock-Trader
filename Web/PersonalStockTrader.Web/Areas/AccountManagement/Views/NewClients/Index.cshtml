@model PersonalStockTrader.Web.ViewModels.AccountManagement.NewClients.NewClientsViewModel
@{
    this.ViewData["Title"] = "New Clients";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">New clients</h4>
            <p class="card-description">
                Clients, which account is not yet confirmed
            </p>
            <div class="table-responsive">
                <table id="newClients" class="table table-hover table-striped">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col" class="text-center">Username</th>
                            <th scope="col" class="text-center">Email</th>
                            <th scope="col" class="text-center">Starting Balance</th>
                            <th scope="col" class="text-center">Confirmed</th>
                            <th scope="col" class="text-center">Confirm</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var client in Model.NewClients)
                        {
                            <tr>
                                <td class="text-center">@client.Username</td>
                                <td class="text-center">@client.Email</td>
                                <td class="text-center">@client.StartingBalance.ToString("f2")</td>
                                <td class="text-center"><label class="badge badge-danger">Pending</label></td>
                                <td class="text-center">
                                    <div class="button-holder">
                                        <a asp-area="AccountManagement" asp-controller="NewClients" asp-action="ConfirmAccount" asp-route-userId="@client.UserId" class="btn btn-info text-uppercase">Confirm</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function() {
            $('#newClients').DataTable({
                "pagingType": "simple_numbers"
            });
            $('.dataTables_length').addClass('bs-select');
        });
    </script>
}